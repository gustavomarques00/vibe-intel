{
    "name": "vibe-intel",
    "private": true,
    "version": "0.1.0",
    "type": "module",
    "packageManager": "pnpm@10.22.0",
    "scripts": {
        "build": "turbo run build --filter=!./",
        "dev": "turbo run dev --filter=!./",
        "dev:shared": "pnpm --filter @devflow-modules/vibe-shared dev",
        "dev:core": "pnpm --filter @devflow-modules/vibe-core dev",
        "dev:api": "pnpm --filter @devflow-modules/vibe-api dev",
        "clean": "rimraf dist",
        "lint": "turbo run lint",
        "test": "turbo run test",
        "test:watch": "turbo run test -- --watch",
        "format": "prettier --write \"**/*.{ts,tsx,js,json,md}\"",
        "prepare": "pnpm clean && pnpm build && pnpm lint",
        "start": "pnpm --filter @devflow-modules/vibe-api start",
        "release": "npx semantic-release --extends semantic-release-monorepo",
        "setup:dev": "pnpm install && pnpm build && pnpm dev"
    },
    "devDependencies": {
        "@notionhq/client": "^2.3.0",
        "@semantic-release/changelog": "^6.0.3",
        "@semantic-release/commit-analyzer": "^13.0.1",
        "@semantic-release/git": "^10.0.1",
        "@semantic-release/npm": "^13.1.1",
        "@semantic-release/release-notes-generator": "^14.1.0",
        "@types/node": "^24.10.0",
        "@types/pino": "^7.0.5",
        "@vitest/coverage-v8": "^1.6.1",
        "commitizen": "^4.3.1",
        "concurrently": "^9.2.1",
        "cz-conventional-changelog": "^3.3.0",
        "eslint": "^9.39.1",
        "prettier": "^3.6.2",
        "rimraf": "^6.1.0",
        "semantic-release": "^25.0.2",
        "semantic-release-monorepo": "^8.0.2",
        "tsx": "^4.20.6",
        "turbo": "^2.6.1",
        "typescript": "^5.9.3",
        "vitest": "^1.6.1"
    },
    "dependencies": {
        "@fastify/cors": "^11.1.0",
        "@fastify/jwt": "^10.0.0",
        "@fastify/rate-limit": "^10.3.0",
        "@opentelemetry/api": "^1.9.0",
        "@opentelemetry/auto-instrumentations-node": "^0.67.0",
        "@opentelemetry/exporter-trace-otlp-http": "^0.208.0",
        "@opentelemetry/sdk-node": "^0.208.0",
        "commander": "^14.0.2",
        "dotenv": "^17.2.3",
        "fast-glob": "^3.3.3",
        "fastify": "^5.6.2",
        "pino": "^10.1.0",
        "pino-pretty": "^13.1.2",
        "simple-git": "^3.30.0",
        "std-env": "^3.10.0",
        "zod": "^4.1.12"
    },
    "workspaces": [
        "packages/core",
        "packages/shared",
        "packages/api"
    ],
    "pnpm": {
        "overrides": {
            "fastify": "^5.6.2",
            "fastify-plugin": "^5.1.0",
            "@fastify/cors": "^10.1.0",
            "@fastify/jwt": "^9.1.0",
            "@fastify/rate-limit": "^10.3.0",
            "@opentelemetry/api": "1.9.0",
            "@opentelemetry/resources": "1.22.0",
            "@opentelemetry/semantic-conventions": "1.22.0",
            "@opentelemetry/sdk-node": "0.208.0",
            "@opentelemetry/exporter-trace-otlp-http": "0.208.0",
            "@opentelemetry/auto-instrumentations-node": "0.67.0"
        }
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        }
    }
}