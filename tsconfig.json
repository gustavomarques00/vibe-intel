{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "noEmit": false,
    "outDir": "dist",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "references": [
    { "path": "packages/shared" },
    { "path": "packages/core" },
    { "path": "packages/api" }
  ],
  "include": ["packages", "scripts/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
